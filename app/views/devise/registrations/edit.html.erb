<div class="row d-flex align-items-center justify-content-center">
  <div class="col-6">
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:name).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:email).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:address).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.number_field :phone_number, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:phone_number).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:password).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:password_confirmation).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "form-label" %>
        <%= f.password_field :current_password, class: "form-control" %>
        <div class="form-text text-danger"><%= resource.errors.full_messages_for(:current_password).first %></div>
      </div>

      <div class="d-flex justify-content-around align-items-center">
        <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>

