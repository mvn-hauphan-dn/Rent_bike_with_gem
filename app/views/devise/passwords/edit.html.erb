<div class="container my-5 py-3">
  <div class="row d-flex align-items-center justify-content-center h-100">
    <div class="col-md-8 col-lg-7 col-xl-6">
      <%= image_tag "logo.jpg", class: "img-fluid" %>
    </div>
    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
      <div class="d-flex justify-content-center mb-3 pb-1">
        <%= image_tag "logo.png" %>
      </div>

      <h1 class="mb-3 pb-3 text-center display-3">Reset password</h5>
      
      <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="mb-4">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
          <div class="form-text text-danger"><%= resource.errors.full_messages_for(:password).first %></div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
          <div class="form-text text-danger"><%= resource.errors.full_messages_for(:password_confirmation).first %></div>
        </div>

        <div class="d-flex justify-content-around align-items-center mb-4">
          <%= f.submit "Reset password", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
