<div class="container h-100 mt-5 mb-4 py-5">
  <div class="row d-flex align-items-center justify-content-center h-100">
    <div class="col-md-8 col-lg-7 col-xl-6">
      <%= image_tag "logo.jpg", class: "img-fluid" %>
    </div>
    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
      <div class="d-flex justify-content-center mb-3 pb-1">
        <%= image_tag "logo.png" %>
      </div>

      <h1 class="mb-3 pb-3 text-center display-1">Log in</h5>
      
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-floating mb-4">
          <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
          <%= f.label :email, for: "floatingInput" %>
        </div>

        <div class="form-floating mb-4">
          <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
          <%= f.label :password, for: "floatingPassword" %>
        </div>
        <% if devise_mapping.rememberable? %>
        <div class="d-flex justify-content-around align-items-center mb-4">
          <%= f.label :remember_me, class: "form-check" do %>
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <span>Remember me</span>
          <% end %>
          <%= link_to 'Forgot password?', new_user_password_path, class: "text-decoration-none", for: "floatingPassword" %>
          <%= link_to 'Resend confirmation?', '#', class: "text-decoration-none", for: "floatingPassword" %>
        </div>
        <% end %>

        <div class="d-flex justify-content-around align-items-center mb-4">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
